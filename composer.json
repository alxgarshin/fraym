{
    "name": "alxgarshin/fraym",
    "type": "library",
    "license": "MIT",
    "description": "The Fraym PHP framework",
    "keywords": [
        "framework",
        "dev"
    ],
    "homepage": "https://github.com/alxgarshin/fraym",
    "authors": [
        {
            "name": "Alex Garshin",
            "email": "alxgarshin@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.4.0",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-imagick": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "phpmailer/phpmailer": "*"
    },
    "bin": [
        "bin/console"
    ],
    "scripts": {
        "fix": "php-cs-fixer fix",
        "stan": "phpstan analyse src",
        "lint": [
            "@fix",
            "@stan"
        ]
    },
    "autoload": {
        "psr-4": {
            "Fraym\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fraym\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^1.22.1",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.5"
    }
}